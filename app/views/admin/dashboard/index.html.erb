<%= render Admin::DashboardHeader::Component.new(title: "Dashboard") %>

<%= render Admin::DashboardContainer::Component.new do |container| %>
  <div class="row my-3">
    <div class="col-6">
      <%= render Admin::DashboardCard::Component.new(title: "Media") do |card| %>
        <% card.with_link(name: "Organizations", url: admin_organizations_path, policy: Organization) %>
        <% card.with_link(name: "Titles", url: admin_titles_path, policy: Title) %>
        <% card.with_link(name: "Venues", url: admin_venues_path, policy: Venue) %>
      <% end %>
    </div>

    <div class="col-6">
      <%= render Admin::DashboardCard::Component.new(title: "Commerce") do |card| %>
        <% card.with_link(name: "Orders", url: admin_orders_path, policy: Order) %>
        <% card.with_link(name: "Order Items", url: admin_order_items_path, policy: OrderItem) %>
        <% card.with_link(name: "Screening Requests", url: admin_contacts_path, policy: ScreeningRequest) %>
        <% card.with_link(name: "Widgets", url: admin_widgets_path, policy: Widget) %>
      <% end %>
    </div>

    <div class="col-6">
      <%= render Admin::DashboardCard::Component.new(title: "Management") do |card| %>
        <% card.with_link(name: "Data Logs", url: polymorphic_path([:admin, DataLog]), policy: DataLog) %>
        <% card.with_link(name: "Inbound Request Logs", url: polymorphic_path([:admin, InboundRequestLog]), policy: InboundRequestLog) %>
        <% card.with_link(name: "Reports", url: polymorphic_path([:admin, Report]), policy: Report) %>
        <% card.with_link(name: "System Groups", url: polymorphic_path([:admin, SystemGroup]), policy: SystemGroup) %>
        <% card.with_link(name: "System Permissions", url: polymorphic_path([:admin, SystemPermission]), policy: SystemPermission) %>
        <% card.with_link(name: "System Roles", url: polymorphic_path([:admin, SystemRole]), policy: SystemRole) %>
        <% card.with_link(name: "System Users", url: polymorphic_path([:admin, User]), policy: User) %>
      <% end %>
    </div>
  </div>

