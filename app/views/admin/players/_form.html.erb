<%= simple_form_for([:admin, instance], local: true) do |f| %>
    <div class="row">
      <div class="col-12 col-lg-6">
        <% unless instance.new_record? %>
          <%= f.input :id, readonly: true, wrapper: :floating_label_form %>
        <% end %>
        <%= f.input :first_name, wrapper: :floating_label_form %>
        <%= f.input :last_name, wrapper: :floating_label_form %>
        <%= f.input :position, wrapper: :floating_label_form %>
        <%= f.association :team, wrapper: :floating_label_form %>
        <%= f.association :roster, wrapper: :floating_label_form %>
        <%= f.input :status, collection: Player::STATUSES, include_blank: true, wrapper: :floating_label_form %>
        <%= f.input :level, collection: Player::LEVELS, include_blank: true, wrapper: :floating_label_form %>
        <%= f.input :notes, as: :text, wrapper: :floating_label_form %>
      </div>
    </div><!-- row -->
    <div class="row">
      <div class="form-group">
        <%= render Admin::ActionButton::Component.new(operation: :cancel_to_show, instance: instance, classes_append: "me-3", public: true) %>
        <%= render Admin::FormButton::Component.new(operation: :submit) %>
      </div>
    </div><!-- row -->
  <% end %>
