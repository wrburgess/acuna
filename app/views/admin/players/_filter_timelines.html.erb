<div class="card mb-3" data-controller="timeline">
  <div class="card-body py-2">
    <div class="d-flex align-items-center">
      <div class="filter-title me-3 fw-bold text-secondary" style="min-width: 120px;">Timeline</div>
      <ul class="nav nav-pills nav-fill flex-grow-1 mb-0">
        <li class="nav-item">
          <%= link_to "YTD", "#", 
                class: "nav-link #{'active' if params[:timeline_id].to_i == 1}",
                data: { 
                  action: "click->timeline#switchTimeline",
                  timeline_id: 1
                } %>
        </li>
        <% @timelines.each do |timeline| %>
          <li class="nav-item">
            <%= link_to timeline.abbreviation, "#", 
                  class: "nav-link #{'active' if params[:timeline_id].to_i == timeline.id}",
                  data: { 
                    action: "click->timeline#switchTimeline",
                    timeline_id: timeline.id
                  } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
