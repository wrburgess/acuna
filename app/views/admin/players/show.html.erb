<%= render Admin::HeaderForShow::Component.new(instance: @instance, controller: params[:controller], action: params[:action], edit_button: true, archive_button: true, copy_button: true) %>

<%= render Admin::PageContainer::Component.new do %>
  <%= render Admin::TableForShow::Component.new(title: 'Player Data') do |table| %>
    <% table.with_row(name: "ID", value: @instance.id) %>
    <% table.with_row(name: "Full Name", value: @instance.name) %>
    <% table.with_row(name: "First Name", value: @instance.first_name) %>
    <% table.with_row(name: "Middle Name", value: @instance.middle_name) %>
    <% table.with_row(name: "Last Name", value: @instance.last_name) %>
    <% table.with_row(name: "Name Suffix", value: @instance.name_suffix) %>
    <% table.with_row(name: "Player Type", value: @instance.player_type) %>
    <% table.with_row(name: "Position", value: @instance.position) %>
    <% table.with_row(name: "Eligible", value: @instance.eligible_positions.join(", ")) %>
    <% table.with_row(name: "Height", value: @instance.height) %>
    <% table.with_row(name: "Weight", value: @instance.weight) %>
    <% table.with_row(name: "Bats", value: @instance.bats) %>
    <% table.with_row(name: "Throws", value: @instance.throws) %>
    <% table.with_row(name: "Birthdate", value: default_date_format(@instance.birthdate)) %>
    <% table.with_row(name: "Age", value: @instance.age.to_s) %>
    <% table.with_row(name: "Team", value: @instance.team&.name) %>
    <% table.with_row(name: "Roster", value: @instance.roster&.name) %>
    <% table.with_row(name: "Status", value: @instance.status&.name || "Not specified") %>
    <% table.with_row(name: "Level", value: @instance.level&.name || "Not specified") %>
    <% table.with_row(name: "BP ID", value: @instance.bp_id) %>
    <% table.with_row(name: "BREF ID", value: @instance.bref_id) %>
    <% table.with_row(name: "CBS ID", value: @instance.cbs_id) %>
    <% table.with_row(name: "CBS NAME", value: @instance.cbs_name) %>
    <% table.with_row(name: "ESPN ID", value: @instance.espn_id) %>
    <% table.with_row(name: "ESPN NAME", value: @instance.espn_name) %>
    <% table.with_row(name: "FG ID", value: @instance.fangraphs_id) %>
    <% table.with_row(name: "FG NAME", value: @instance.fangraphs_name) %>
    <% table.with_row(name: "FANTRAX ID", value: @instance.fantrax_id) %>
    <% table.with_row(name: "FANTRAX NAME", value: @instance.fantrax_name) %>
    <% table.with_row(name: "MLB ID", value: @instance.mlb_id) %>
    <% table.with_row(name: "MLB NAME", value: @instance.mlb_name) %>
    <% table.with_row(name: "MLBAM ID", value: @instance.mlbam_id) %>
    <% table.with_row(name: "MLBAM NAME", value: @instance.mlbam_name) %>
    <% table.with_row(name: "NFBC ID", value: @instance.nfbc_id) %>
    <% table.with_row(name: "NFBC NAME", value: @instance.nfbc_name) %>
    <% table.with_row(name: "RAZZBALL ID", value: @instance.razzball_id) %>
    <% table.with_row(name: "RAZZBALL NAME", value: @instance.razzball_name) %>
    <% table.with_row(name: "RETRO ID", value: @instance.retro_id) %>
    <% table.with_row(name: "ROTOWIRE ID", value: @instance.rotowire_id) %>
    <% table.with_row(name: "ROTOWIRE NAME", value: @instance.rotowire_name) %>
    <% table.with_row(name: "SFBB ID", value: @instance.sfbb_id) %>
    <% table.with_row(name: "SFBB NAME", value: @instance.sfbb_name) %>
    <% table.with_row(name: "YAHOO ID", value: @instance.yahoo_id) %>
    <% table.with_row(name: "YAHOO NAME", value: @instance.yahoo_name) %>
    <% table.with_row(name: "Notes", value: @instance.notes) %>
    <% table.with_row(name: "Archived at", value: default_date_format(@instance.archived_at)) %>
  <% end %>
<% end %>
